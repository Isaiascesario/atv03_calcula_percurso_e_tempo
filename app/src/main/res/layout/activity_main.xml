<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:rowCount="7"
    android:columnCount="3"
    android:useDefaultMargins="true"
    android:background="@color/colorPrimary">

    <Button
        android:id="@+id/condecederPermisaoButton"
        android:layout_width="320sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="30sp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:background="@drawable/custom_button"
        android:textColor="#1B5E20"
        android:text="@string/conceder" />

    <Button
        android:id="@+id/ativarGPSButton"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/custom_button"
        android:drawableEnd="@android:drawable/ic_input_add"
        android:text="@string/ativar"
        android:textColor="#1B5E20" />

    <Button
        android:id="@+id/desativarGPSButton"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:text="@string/desativar"
        android:layout_row="1"
        android:layout_column="1"
        android:background="@drawable/custom_button"
        android:drawableEnd="@android:drawable/ic_delete"
        android:textColor="#1B5E20"/>

    <Button
        android:id="@+id/iniciarPercursoButton"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginEnd="20sp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginStart="30sp"
        android:text="@string/inciar"
        android:background="@drawable/custom_button"
        android:textColor="#1B5E20"/>

    <Button
        android:id="@+id/terminarPercursoButton"
        android:layout_width="150sp"
        android:layout_height="50dp"
        android:layout_row="2"
        android:layout_column="1"
        android:text="@string/terminar"
        android:background="@drawable/custom_button"
        android:textColor="#1B5E20" />

    <TextView
        android:id="@+id/distanciaTextView"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="30sp"
        android:textColor="#1B5E20"
        android:text="@string/distancia_percorrida" />

    <TextView
        android:id="@+id/distanciaInputTextView"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_row="3"
        android:layout_column="1"
        android:textColor="#1B5E20"
        android:text="0.0 KM" />

    <TextView
        android:id="@+id/tempoTextView"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="30sp"
        android:textColor="#1B5E20"
        android:text="@string/tempo_passado" />

    <Chronometer
        android:id="@+id/tempoPercorridoChronometer"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_row="4"
        android:layout_column="1"
        android:textColor="#1B5E20"
        android:layout_gravity="center_vertical" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_marginStart="30sp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/procurarInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/oque_procura"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/procurarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_marginEnd="20sp"
        android:backgroundTint="#1B5E20"
        android:layout_marginStart="30sp"
        app:srcCompat="@android:drawable/ic_menu_search" />

</GridLayout>